<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/albumArtSongList"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_album"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_gravity="left" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/Artistname"
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="18sp"
            android:text="Dummy Artist"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_above="@+id/musicandalbumnumber"
            android:layout_toRightOf="@+id/albumArtSongList"
            android:layout_toEndOf="@+id/albumArtSongList"
            android:gravity="left"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/musicandalbumnumber"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="fill_parent"
            android:layout_height="16dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="12sp"
            android:textColor="#939393"
            android:text="Dummy counter"
            android:layout_alignBottom="@+id/albumArtSongList"
            android:layout_toRightOf="@+id/albumArtSongList"
            android:layout_toEndOf="@+id/albumArtSongList"
            android:gravity="left" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="12dp"
        android:id="@+id/songItemInnerLayout"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="120dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_gravity="right"
        android:layout_weight="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_gravity="right"
            android:rotation="270"
            android:layout_marginTop="7dp"
            android:src="@drawable/ic_downarrow"/>
    </LinearLayout>
</LinearLayout>