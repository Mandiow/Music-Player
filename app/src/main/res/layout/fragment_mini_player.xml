<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="65dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/layoutInfoMiniPlayer"
        android:layout_gravity="left"
        android:layout_weight="1.8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titleMiniPlayer"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="12dp"
            android:text="DummyTitle"
            android:textColor="#000000"
            android:textSize="16sp"
            android:maxLength="26" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/artistMiniPlayer"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="12dp"
            android:text="DummyArtist"
            android:textSize="12sp"
            android:maxLength="26" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_weight="3">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_rewind"
            android:background="#00000000"
            android:id="@+id/backMiniPlayer"
            android:scaleX="0.4"
            android:scaleY="0.4"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:clickable="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playMiniPlayer"
            android:src="@drawable/ic_play"
            android:background="#00000000"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:clickable="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_forward"
            android:background="#00000000"
            android:id="@+id/forwardMiniPlayer"
            android:scaleX="0.4"
            android:scaleY="0.4"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:clickable="true" />
    </LinearLayout>

</LinearLayout>